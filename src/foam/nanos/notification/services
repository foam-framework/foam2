    dao.addIndex(new foam.core.PropertyInfo[] { foam.nanos.notification.Notification.EXPIRY_DATE });
    return new foam.dao.EasyDAO.Builder(x)
      .setOf(foam.nanos.notification.Notification.getOwnClassInfo())
      .setAuthorize(false)
